@model Product

<!-- загальна бібліотека
<<link rel="stylesheet" href="~/PetProjSite.styles.css" asp-append-version="true" /> -->

<link rel="stylesheet" href="~/css/Login-Singup.css">
<link rel="stylesheet" href="~/css/Login.css">

@using PetProjSite.Controllers;
@{
    if (LoginController.IsAdmin)
    {
        <section class="Login">
            <div class="frame">
                <h1 class="login-text">Add product</h1>
                <form asp-action="AddingNewProduct" class="form-signin">
                    <div class="text-danger"></div>
                    <div class="form-floating">
                        <label asp-for="product_name">Product name: </label>
                        <input asp-for="product_name" class="form-styling" aria-required="true" />
                        <span asp-validation-for="product_name" class="text-danger"></span>
                        
                        
                    </div>
                    <div class="form-floating">
                        <label asp-for="product_price">Price: </label>
                        <input asp-for="product_price" class="form-styling" aria-required="true" />
                        
                        <span asp-validation-for="product_price" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <label asp-for="product_description">Descriprion: </label>
                        <input asp-for="product_description" class="form-styling" aria-required="true" />
                        
                        <span asp-validation-for="product_description" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <label asp-for="product_photo">Photo: </label>
                        <input asp-for="product_photo" class="form-styling" aria-required="true" />
                        
                        <span asp-validation-for="product_photo" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <label asp-for="total_category">Total category: </label>
                        <input asp-for="total_category" class="form-styling" autocomplete="new-password" aria-required="true" />
                        
                        <span asp-validation-for="total_category" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <label asp-for="sub_category">Sub category: </label>
                        <input asp-for="sub_category" class="form-styling" autocomplete="new-password" aria-required="true" />
                        
                        <span asp-validation-for="sub_category" class="text-danger"></span>
                    </div>
                    <button id="addSubmit" type="submit" class="btn-signin">Add</button>
                </form>
                </div>
            </section>
    }
}


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}