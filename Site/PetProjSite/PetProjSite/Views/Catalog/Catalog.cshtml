@using PetProjSite.Controllers;

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!--<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />-->
    <!-- <link rel="stylesheet" href="~/PetProjSite.styles.css" asp-append-version="true" />  -->
    <link rel="stylesheet" type="text/css" href="~/css/Layout.css">
    <link rel="stylesheet" type="text/css" href="~/css/catalog.css">
</head>
<body>
    <main>
        <section>
            <div class="box-container-of-things">
                @foreach (var product in Model)
                {
                    
                    <div class=container-of-things>
                        <img src="@product.product_photo">
                        <div class="container-of-things-text">
                            @product.product_description
                        </div>
                        <div class="button-box">
                            <form class="rowname7" asp-action="AddingToHistory" asp-controller="Profile" method="post">
                                <input type="hidden" name="productId" value="@product.id" />
                                <button class="button_text button-things" type="submit">
                                    Переглянути
                                </button>
                            </form>
                            
                            @if (LoginController.IsAdmin)
                            {
                                <form class="rowname7" asp-action="GetProductId" asp-controller="Catalog" method="post">
                                    <input type="hidden" name="catalogId" value="@product.id" />
                                    <input type="submit" class="btn btn-primary edit-button" data-id="@product.id" value="Edit" />
                                </form>
                                <form class="rowname7" asp-action="DeleteProduct" asp-controller="Catalog" method="post">
                                    <input type="hidden" name="catalogId" value="@product.id" />
                                    <input type="submit" class="btn btn-primary edit-button" data-id="@product.id" value="Delete" />
                                </form>
                            }
                        </div>
                    </div>
                }
            </div>
        </section>
    </main>

</body>
