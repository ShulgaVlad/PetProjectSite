@model PetProjSite.Models.ProductAndCatalog
@using PetProjSite.Controllers;
<!-- загальна бібліотека
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> -->
<!-- загальна бібліотека
<<link rel="stylesheet" href="~/PetProjSite.styles.css" asp-append-version="true" /> -->

<link rel="stylesheet" type="text/css" href="~/css/Login.css">



<section>
    <div class="Products">
        @foreach (var product in Model.cataloghistory)
        {
            var prodexist = Model.productshistory.FirstOrDefault(d => d.id == product.Product.id);
            if (prodexist != null)
            {
                <div class=Products__block>
                    <div class="Products__img">
                        <img src="@product.Product.product_photo">
                    </div>
                    <div class="Products__text">
                        @product.Product.product_description
                    </div>
                    <div class="Products__BoxButton">
                        <form class="" asp-action="AddingToHistory" asp-controller="Profile" method="post">
                            <input type="hidden" name="productId" value="@product.Product.id" />
                            <button class="Button button-things" type="submit">
                                Переглянути
                            </button>
                        </form>
                    </div>
                </div>
            }
        }
    </div>
</section>
