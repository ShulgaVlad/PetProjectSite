@model UserProfile

<link rel="stylesheet" type="text/css" href="~/css/Login/checkbox.css">
<link rel="stylesheet" type="text/css" href="~/css/Login/Login.css">


<section class="Login">
    <div class="Login__frame">
        <div class="Login__nav">
            <!-- Навігаційні посилання для увіходу та реєстрації -->
            <ul>
                <li class="Login__signin-inactive"><a class="btn" href="/Login/Login">Увійти</a></li>
                <li class="Login__signup-active"><a class="btn" href="/Registration/Registration">Зареєструватися</a></li>
            </ul>
        </div>

        <!-- Форма входу -->
        <form class="Login__form-signin" id="account" method="post">
            <!-- Введення ім'я користувача -->

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
                <label asp-for="e_mail">E-mail</label>
                <input asp-for="e_mail" class="form-control Login__input" autocomplete="username" aria-required="true" />
                <span asp-validation-for="e_mail" class="text-danger"></span>
            
                <label asp-for="first_name">First name</label>
                <input asp-for="first_name" class="form-control  Login__input" aria-required="true" />
                <span asp-validation-for="first_name" class="text-danger"></span>
            
                <label asp-for="surname">Last name</label>
                <input asp-for="surname" class="form-control  Login__input" aria-required="true" />
                <span asp-validation-for="surname" class="text-danger"></span>
            
                <label asp-for="phone_number">Phone number</label>
                <input asp-for="phone_number" class="form-control  Login__input" aria-required="true" />
                <span asp-validation-for="phone_number" class="text-danger"></span>

            <div class="Login__form-password">
                <label asp-for="password">Password</label>
                <input asp-for="password" type="password" class="Login__input  Login__input" autocomplete="new-password" aria-required="true" />
                <img class="Button Button_ico button-eyeicon" src="~/images/password_hide.png" id="eyeicon" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>

            <!-- Прапорець "Запам'ятати мене" -->
            <input type="checkbox" id="checkbox" />
            <label for="checkbox"><span class="ui"></span>Запам'ятати мене</label>
            <!-- Кнопка входу -->
            <div id="Login__submit" type="submit" class="Login__submit">
                <button id="registerSubmit" type="submit" class="Button Login__btn-signin">Зареєструватися</button>
            </div>

        </form>

        <!-- Посилання на відновлення паролю -->
        <div class="forgot">
            <a class="forgot__btn" href="#">Забули пароль?</a>
        </div>

    </div>

    <!-- Посилання для оновлення сторінки -->
    <a id="refresh" value="Оновити" onClick="history.go()">
        <!-- Зображення кнопки оновлення -->
        <img src="~/images/reload.png" class="refreshicon">
    </a>

</section>

<script src="~/js/Login/Login.js" defer></script>


