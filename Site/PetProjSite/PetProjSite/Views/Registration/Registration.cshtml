@model UserProfile



<!-- загальна бібліотека
<<link rel="stylesheet" href="~/PetProjSite.styles.css" asp-append-version="true" /> -->


<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/style.css">
<link rel="stylesheet" type="text/css" href="~/css/Login-Singup.css">
<link rel="stylesheet" type="text/css" href="~/css/Login.css">


<section style="display:flex; align-items:center; justify-content:center; height:100%">
    <div class="frame">
        <div class="nav">
            <!-- Навігаційні посилання для увіходу та реєстрації -->
            <ul class"links">
                <li class="signin-inactive"><a class="btn" href="/Login/Login">Увійти</a></li>
                <li class="signup-active"><a class="btn" href="/Registration/Registration">Зареєструватися</a></li>
            </ul>
        </div>

        <!-- Ініціалізація AngularJS -->
        <div ng-app ng-init="checked = false">
            <!-- Форма входу -->




            <form class="form-signin" id="account" method="post">
                <!-- Введення ім'я користувача -->

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <label asp-for="e_mail">E-mail</label>
                    <input asp-for="e_mail" class="form-control form-styling" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="e_mail" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <label asp-for="first_name">First name</label>
                    <input asp-for="first_name" class="form-control  form-styling" aria-required="true" />
                    <span asp-validation-for="first_name" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <label asp-for="surname">Last name</label>
                    <input asp-for="surname" class="form-control  form-styling" aria-required="true" />
                    <span asp-validation-for="surname" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <label asp-for="phone_number">Phone number</label>
                    <input asp-for="phone_number" class="form-control  form-styling" aria-required="true" />
                    <span asp-validation-for="phone_number" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <label asp-for="password">Password</label>
                    <input asp-for="password" type="password" class="form-control  form-styling" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="password" class="text-danger"></span>
                    <img class="Button button-eyeicon" src="~/images/password_hide.png" id="eyeicon" />
                </div>
                <!-- Прапорець "Запам'ятати мене" -->
                <input type="checkbox" id="checkbox" />
                <label for="checkbox"><span class="ui"></span>Запам'ятати мене</label>
                <!-- Кнопка входу -->
                <div id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary btn-animate">
                    <button id="registerSubmit" type="submit" class="btn-signin">Зареєструватися</button>
                </div>

            </form>



        </div>
        <!-- Посилання на відновлення паролю -->
        <div class="forgot">
            <a href="#">Забули пароль?</a>
        </div>

    </div>

    <!-- Посилання для оновлення сторінки -->
    <a id="refresh" value="Оновити" onClick="history.go()">
        <!-- Зображення кнопки оновлення -->
        <img src="~/images/reload.png" class="refreshicon" width="25px" height="25px">
    </a>


</section>
<script>
    let eyeicon = document.getElementById("eyeicon");
    let password = document.getElementById("password");
    eyeicon.onclick = function () {
        if (password.type == "password") {
            password.type = "text";
            eyeicon.src = "/images/password_show.png"
        }
        else {
            password.type = "password";
            eyeicon.src = "/images/password_hide.png"
        }
    }

</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


